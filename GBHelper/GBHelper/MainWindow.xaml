<Window x:Class="GBHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GB Helper" Height="90" Width="200" Topmost="True" Icon="Aha-Soft-Financial-Abacus.ico">
    <Grid>
        <TextBox x:Name="textBoxGB" TextWrapping="Wrap" IsReadOnly="True" Loaded="textBoxGB_Loaded" PreviewMouseDown="textBoxGB_PreviewMouseDown" Height="25" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBoxClipBoard" Margin="0,30,0,0" IsReadOnly="True" IsSynchronizedWithCurrentItem="True" SelectedIndex="0" SelectionChanged="comboBoxClipBoard_SelectionChanged"/>

    </Grid>
</Window>
